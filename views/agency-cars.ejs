<%- include('./partials/head.ejs') %>

    <style>
        .btn-newsletter {
            margin: 15px auto;
        }
    </style>

    <%- include('./partials/messages.ejs') %>
        <%- include('./partials/agency-add-car.ejs', {carsLength: cars.length, verified: user.verified}) %>
            <%- include('./partials/agency-update-car.ejs') %>
                <div class="container">
                    <a style="text-decoration: underline;" href="/profile"><%=translation.go_back%></a>
                </div>

                <table style="margin: 0 auto; scale: 0.90;">
                    <thead>
                        <tr>
                            <th><%=translation.car_image%></th>
                            <th><%=translation.car_name%></th>
                            <th><%=translation.start_date%></th>
                            <th><%=translation.end_date%></th>
                            <th><%=translation.price%></th>
                            <th><%=translation.actions%></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% cars.forEach((car, index)=> { %>
                            <tr>
                                <td>
                                    <a href="#" class="showcase-img-box">
                                        <img src="/images/cars/car.jpeg" alt="car" class="showcase-img" width="70">
                                    </a>
                                </td>
                                <td>
                                    <%= car.name %>
                                </td>
                                <td>
                                    <%= car.price %>
                                </td>
                                <td>
                                    <%= car.city %>
                                </td>
                                <td>
                                    <%= car.brand %>
                                </td>
                                <td>
                                    <%= car.model %>
                                </td>
                                <td>
                                    <%= car.description %>
                                </td>
                                <td>
                                    <a href="/profile/cars/<%=car._id%>" id="agency-update-car-btn"
                                        class="btn-newsletter"><%=translation.update%></a>
                                    <a href="/profile/cars/delete/<%=car._id%>" id="agency-update-car-btn"
                                        class="btn-newsletter"><%=translation.delete%></a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>



                <%- include('./partials/tail.ejs') %>