<%- include('./.phead.ejs') %>
<%- include('../partials/messages.ejs') %>

    <% if(agencies.length> 0) { %>
        <!-- multistep form -->
        <div id="msform">

            <h2 class="fs-title">Agencies</h2>
            <!-- <h3 class="fs-subtitle"></h3> -->
            <table style="margin: 0 auto; scale: 0.90;">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Cars</th>
                        <th>Reservations</th>
                        <th>Verified</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% agencies.forEach(agency=> { %>
                        <tr>
                            <td><a href="#">
                                    <%= agency.name %>
                                </a></td>
                            <td><a href="#">
                                    <%= agency.email %>
                                </a></td>
                            <td>
                                <%= agency.cars.length %>
                            </td>
                            <td>
                                <%= agency.reserves.length %>
                            </td>
                            <td>
                                <%= agency.verified %>
                            </td>
                            <td>
                                <a href="/admin/delete-agency/<%=agency._id%>" class="delete-btn"
                                    style="--fs-11: 0.875rem; margin-bottom: 15px;">Delete</a>
                                <% if(!agency.verified) { %>
                                    <a href="/admin/verify-agency/<%=agency._id%>" class="delete-btn"
                                        style="--fs-11: 0.875rem;">Verify</a>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>
    <% } else { %>
        <h3 class="showcase-title" style="align-self: center;">
            <a href="/admin/dashboard" class="showcase-title" style="width: fit-content; margin: 20px auto;">
                You don't have any agency yet !
            </a>
        </h3>
    <% } %>

<%- include('./.ptail.ejs') %>