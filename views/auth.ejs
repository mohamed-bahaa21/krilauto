<%- include('./partials/head.ejs') %>

    <!-- multistep form -->
    <style>
        .login-with-btn {
            transition: background-color 0.3s, box-shadow 0.3s;
            padding: 12px 16px 12px 42px;
            border: none;
            border-radius: 3px;
            box-shadow: 0 -1px 0 rgba(0, 0, 0, 0.04), 0 1px 1px rgba(0, 0, 0, 0.25);
            background-color: white;
            color: #757575;
            font-size: 14px;
            font-weight: 500;
            background-repeat: no-repeat;
            background-position: 12px 11px;
            background-size: 18px 18px;
            margin: 10px auto;
        }

        .login-with-google-btn {
            background-image: url(data:image/svg+xml;base64,);

        }

        .login-with-facebook-btn {
            background-image: url(data:image/jpeg;base64,);
        }

        .login-with-twitter-btn {
            background-image: url(data:image/png;base64,);
        }

        .login-with-btn:hover {
            box-shadow: 0 -1px 0 rgba(0, 0, 0, 0.04), 0 2px 4px rgba(0, 0, 0, 0.25);
        }

        .login-with-btn:active {
            background-color: #eeeeee;
        }

        .login-with-btn:focus {
            outline: none;
            box-shadow: 0 -1px 0 rgba(0, 0, 0, 0.04), 0 2px 4px rgba(0, 0, 0, 0.25), 0 0 0 3px #c8dafc;
        }

        .login-with-btn:disabled {
            filter: grayscale(100%);
            background-color: rgb(251 239 239 / 50%);
            box-shadow: 0 -1px 0 rgba(0, 0, 0, 0.04), 0 1px 1px rgba(0, 0, 0, 0.25);
            cursor: not-allowed;
        }

        #login-container {
            display: flex;
            flex-flow: row wrap;
            -webkit-box-pack: start;
            justify-content: center;
            -webkit-box-align: stretch;
            align-items: stretch;
            width: 100%;
            /* min-height: 100vh; */
        }

        #login-container-1 {
            flex-basis: 50%;
            background: rgb(251 239 239 / 50%);
        }

        #login-container-2 {
            flex-basis: 50%;
            background-image: url("images/auth-bg.svg");
            background-position: center center;
            background-color: rgb(251 239 239 / 50%);
            background-size: cover;
        }

        label {
            font-size: 0.9em;
        }

        input {
            padding: 5px;
            border: 1px solid var(--eerie-black);
            border-radius: var(--border-radius-sm);
            margin: 5px;
        }
    </style>

    <%- include('./partials/messages.ejs') %>
